<div class="main">
    <div class="container">
        <h2 class="text-center">Burger Chomper</h2>
        <div class="text-center">
            <img src="/assets/img/burger.png">
        </div> 
        <div class="text-center add_menu">
            <input id="newBurger" type="text">
            <button id="addBurger" type="button" class="btn btn-large btn-success" placeholder="Add a burger">Add</button>
        </div>
    </div>
</div>


<div class="row">
    <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
        <ul class="devoured">
            {{#each burgers}}
              {{#unless devoured}}
                {{this.burger_name}}
              {{/unless}}
            {{/each}}
        </ul>
        <button type="button" class="btn btn-large btn-success">Eat a favorite</button>
    </div>
</div>

<div class="row">
    <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
        <ul class="served">
             {{#each burgers}}
              {{#unless served}}
              {{/unless}} 
            {{/each}}
        </ul>
        
    </div>
</div>



